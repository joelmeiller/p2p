{
  "name": "@p2p/web-app",
  "private": false,
  "version": "0.0.1",
  "description": "The primary entry point for the p2p assessment web application",
  "scripts": {
    "lint": "eslint .",
    "start": "node server.js",
    "storybook": "start-storybook -p 9000 -s ./",
    "browser-sync": "browser-sync start --proxy='localhost:3000' --files='.html, css/.css' --port=8000 --browser='Google Chrome Canary'"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://github.com/joelmeiller/p2p"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    },
    "plugins": [
      "react"
    ],
    "extends": [
      "plugin:react/recommended",
      "airbnb"
    ]
  },
  "keywords": [
    "p2p",
    "webapp"
  ],
  "license": "UNLICENSED",
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "postcss-cssnext": {},
      "postcss-browser-reporter": {},
      "postcss-reporter": {}
    }
  },
  "dependencies": {
    "@kadira/storybook-deployer": "^1.0.0",
    "babel-polyfill": "^6.13.0",
    "react": "^15.2.0",
    "react-dom": "^15.3.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.6.1",
    "react-router-redux": "^4.0.5",
    "redux": "^3.5.2"
  },
  "devDependencies": {
    "@kadira/storybook": "^1.36.0",
    "autoprefixer": "^6.3.6",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "css-loader": "^0.23.1",
    "eslint": "^2.7.0",
    "eslint-config-airbnb": "^6.2.0",
    "eslint-plugin-react": "^4.2.3",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cssnext": "^2.6.0",
    "postcss-import": "^8.1.2",
    "postcss-loader": "^0.9.1",
    "postcss-reporter": "^1.3.3",
    "raw-loader": "^0.5.1",
    "style-loader": "^0.13.1"
  }
}
